<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="css/LoginGUI.css">
</head>
<body>
<form action="/LoginGUI" method="POST">
    <div class="center-container">
        <div class="container">
            <div class="login-container">
                <h2 class="login-header">Login</h2>
                <div class="input-container">
                    <input type="text" name="Username" placeholder="Username">
                </div>
                <div class="input-container">
                    <input type="password" name="Password" placeholder="Password">
                </div>
            </div>
            <div class="profile-dropdown">
                <h2 class="profile-header">Profile</h2>
                <select class="profile-select" name="selectedoption">
                    <% myList.forEach(item => {%>
                        <option value="<%= item%>"><%= item%></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <input type="submit" value="Login" class="login-button">
    </div>
    <% if(message.length>0) {%>
        <div><%= message%></div>
    <%}%>
</form>
<div class="clocking-in">
    <h2 class="clockin">Clock In/Out Only</h2>
        <table>
            <tr>
                <td><button id="employee_clockinqr" onclick="document.location='/employeeclockinQR'"><h3>Clock In With QR Code</h3></button></td>
            </tr>
            <tr>
                <td><button id="employee_clockoutqr" onclick="document.location='/employee_viewaccount'"><h3>Clock Out with QR Code</h3></button></td>
            </tr>
        </table>
    </select>
</div>

</body>
</html>
